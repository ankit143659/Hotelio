<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hotelio" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main1</item> <!-- Change the primary color -->
        <item name="colorPrimaryDark">@color/main1</item> <!-- Dark color for status bar -->
        <item name="colorAccent">@color/main1</item> <!-- Accent color -->
        <item name="windowActionBar">false</item> <!-- Disables the action bar -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hotelio" parent="Base.Theme.Hotelio" />

    <style name="CustomTimePickerDialog" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="materialTimePickerTheme">@style/CustomTimePicker</item>
    </style>

    <style name="CustomTimePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/main1</item>
        <item name="colorPrimaryVariant">@color/main2</item>
        <item name="colorOnPrimary">@color/white</item>  <!-- Text color on button -->
        <item name="colorAccent">@color/main3</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item> <!-- OK & Cancel text color -->
    </style>




</resources>