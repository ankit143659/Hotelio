<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:background="@drawable/edit_text_effective">

    <TextView
        android:id="@+id/tableNoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table No: 1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/billIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Bill ID: 123456"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/totalAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Total: â‚¹500"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/timestampText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 5/Feb/2025, 12:00 PM"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text="Confirm"
            android:backgroundTint="@color/main5"/>

        <Button
            android:id="@+id/rejectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Reject"
            android:backgroundTint="@color/black"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/generateBillBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="Generate Bill"
            android:backgroundTint="#E90810"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
</LinearLayout>
