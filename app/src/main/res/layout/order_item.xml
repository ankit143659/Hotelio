<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/edit_text_effective"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tableNoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table No: 1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/itemDetailsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item: Limca x1"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹800"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:text="Confirm"
            android:backgroundTint="@color/main5"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/rejectBtn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Reject"
            android:backgroundTint="@color/black"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Delete"
            android:backgroundTint="#E20B0B"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
